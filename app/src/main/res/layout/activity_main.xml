<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView android:id="@+id/stretch_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>

    <Button android:id="@+id/previous_exercise_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Previous Exercise"
        android:layout_below="@id/stretch_name_textview"
        android:layout_alignParentLeft="true"
        android:onClick="previousExercise"/>

    <Button android:id="@+id/next_exercise_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Exercise"
        android:layout_below="@id/stretch_name_textview"
        android:layout_alignRight="@id/previous_exercise_textview"
        android:layout_alignParentRight="true"
        android:onClick="nextExercise"/>
</RelativeLayout>